<html>
    <head>
    <title>チノちゃん可愛い</title>
    </head>
    <body class="body">
            <a class="gr-index"><%=  notice %></a></a>
            <h1 class="header">BOOKs</h1>
            <table class="table">
                <tr>
                    <td class="table-ti">Title</td>
                    <td class="table-bo">Body</td>
                    <td class="table-li"></td>
                </tr>
                <% @books.each do |book| %>
                <tr>
                    <td class="table-title"><%= link_to book.title %></td>
                    <td class="table-body"><%= link_to book.body %></td>
                    <td> <%= link_to "Show", book_path(book) %>
                    <a class="table-link">
                    <%= link_to "Edit", edit_book_path(book) %></a>
                    <a class="table-link">
                    <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></a>
                    </td>
                </tr>
                <% end %>
            </table>
<h3>New book</h3>

<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<p class="books">Titel</p>
<%= f.text_field :title %>
<p class="books">Body</p>
<%= f.text_field :body %>

<p><%= f.submit 'Create Book' %></p>

<% end %>
    </body>
</html>